{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases"
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "before 6am on Monday"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 0,
  "automerge": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": true
    },
    {
      "description": "Automerge non-major updates if CI passes",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Keep major updates manual for review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Group all non-major dependencies together",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Separate major updates for careful review",
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": null
    },
    {
      "description": "High priority for security updates",
      "matchDatasources": [
        "pypi"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "prPriority": 10
    },
    {
      "description": "Python dependencies - use uv",
      "matchManagers": [
        "pep621"
      ],
      "enabled": true,
      "rangeStrategy": "bump"
    },
    {
      "description": "Dev dependencies can be more aggressive",
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "automerge": true,
      "minimumReleaseAge": "0 days"
    },
    {
      "description": "Production dependencies need a bit more stability",
      "matchDepTypes": [
        "dependencies"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Update GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true,
      "pinDigests": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "automerge": true,
    "schedule": [
      "at any time"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 6am on Monday"
    ]
  },
  "pip_requirements": {
    "managerFilePatterns": [
      "/(^|/)requirements.*\\.txt$/"
    ]
  },
  "ignorePresets": [
    ":prHourlyLimit2"
  ]
}
